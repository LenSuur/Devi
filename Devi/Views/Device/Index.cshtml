@model IEnumerable<Devi.Models.DeviceModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeviceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SerialNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Receipt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BoughtOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WarrantyTill)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeviceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SerialNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @if(item.Receipt != null)
                {
                    <img src="check.png" alt="check" style="height:30px; width: 30px;" />
                }
                else
                {
                    <img src="x.png" alt="X" style="height:30px; width: 30px" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BoughtOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WarrantyTill)
                @if(item.WarrantyTill.AddDays(-10) >= DateTime.Now) 
                {
                    <img src="exclamation.png" alt="exclamation" style="height:30px; width: 30px;" />
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
