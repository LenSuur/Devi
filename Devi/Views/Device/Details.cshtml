@model Devi.Models.DeviceModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Device</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeviceName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeviceName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SerialNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SerialNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Receipt)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Receipt != null)
            {
                <a href="@Url.Action("Download", "Device", new { receipt = Model.Receipt })">
                    <img src="/download.png" href="" alt="download" style="height:30px; width: 40px;"/>
                </a>
            }
            else
            {
                <img src="/empty.png" alt="Empty" style="height:30px; width: 30px"/>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BoughtOn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BoughtOn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WarrantyTill)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WarrantyTill)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
